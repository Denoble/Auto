<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CarListFragment"
    >

  <!-- TODO: Update blank fragment layout -->
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerView"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView_fragment_car_list_loading"
      app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
      app:spanCount="1"
      tools:itemCount="12"
      tools:listitem="@layout/list_item"
      />
  <ImageView
      android:id="@+id/imageView_fragment_car_list_loading"
      android:layout_width="0dp"
      android:layout_height="240dp"
      android:layout_marginTop="24dp"
      app:layout_constraintEnd_toEndOf="@+id/tv_fragment_car_list_loading"
      app:layout_constraintStart_toStartOf="@+id/tv_fragment_car_list_loading"
      app:layout_constraintTop_toBottomOf="@+id/tv_fragment_car_list_loading"
      app:srcCompat="@drawable/loading_animation"
      />
  <TextView
      android:id="@+id/tv_fragment_car_list_loading"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:text="@string/fetching_data"
      android:textAppearance="@style/TextAppearance.AppCompat.Display1"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>