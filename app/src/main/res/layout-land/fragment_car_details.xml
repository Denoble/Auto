<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.CarDetailsFragment"
    >

  <!-- TODO: Update blank fragment layout -->


  <Button
      android:id="@+id/details_layout_caller_button"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@string/Call_dealer"
      app:layout_constraintEnd_toEndOf="@+id/details_layout_tv_trim"
      app:layout_constraintStart_toStartOf="@+id/details_layout_tv_price"
      app:layout_constraintTop_toBottomOf="@+id/details_layout_tv_millage"
      />
  <ImageView
      android:id="@+id/imageView_details_layout"
      android:layout_width="0dp"
      android:layout_height="180dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:src="@drawable/loading_animation"
      app:layout_constraintEnd_toStartOf="@+id/guideline3"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/loading_animation"
      />

  <ScrollView
      android:id="@+id/scrollView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:contentDescription="@string/app_name"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/guideline3"
      app:layout_constraintTop_toTopOf="parent"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
      <include
          layout="@layout/details_scroll_layout"
          android:id="@+id/details_layout_extension"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          />
    </LinearLayout>
  </ScrollView>
  <TextView
      android:id="@+id/detail_layout_tv_year"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="TextView"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="@+id/imageView_details_layout"
      app:layout_constraintTop_toBottomOf="@+id/imageView_details_layout"
      />
  <TextView
      android:id="@+id/details_layout_tv_make"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text="TextView"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/detail_layout_tv_year"
      app:layout_constraintStart_toEndOf="@+id/detail_layout_tv_year"
      app:layout_constraintTop_toTopOf="@+id/detail_layout_tv_year"
      />
  <TextView
      android:id="@+id/details_layout_tv_model"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text="TextView"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/details_layout_tv_make"
      app:layout_constraintStart_toEndOf="@+id/details_layout_tv_make"
      app:layout_constraintTop_toTopOf="@+id/details_layout_tv_make"
      app:layout_constraintVertical_bias="0.0"
      />
  <TextView
      android:id="@+id/details_layout_tv_trim"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text="TextView"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/details_layout_tv_model"
      app:layout_constraintEnd_toEndOf="@+id/imageView_details_layout"
      app:layout_constraintStart_toEndOf="@+id/details_layout_tv_model"
      app:layout_constraintTop_toTopOf="@+id/details_layout_tv_model"
      app:layout_constraintVertical_bias="0.0"
      />
  <TextView
      android:id="@+id/details_layout_tv_price"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="TextView"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="@+id/detail_layout_tv_year"
      app:layout_constraintTop_toBottomOf="@+id/detail_layout_tv_year"
      />
  <TextView
      android:id="@+id/details_layout_tv_millage"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text="TextView"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/details_layout_tv_price"
      app:layout_constraintStart_toEndOf="@+id/details_layout_tv_price"
      app:layout_constraintTop_toTopOf="@+id/details_layout_tv_price"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.5"
      />

</androidx.constraintlayout.widget.ConstraintLayout>